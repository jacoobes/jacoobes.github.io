<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="A layout example that shows off a blog page with a list of posts.">
    <title>Blog &ndash; Layout Examples &ndash; Pure</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css" integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/grids-responsive-min.css" />
    <link rel="stylesheet" href="/style.css">
</head>
<body class="pure-g">
    <div class="pure-u-1 pure-u-md-1-2">
        <div class="headerandlinks"> 
            <h1 class="myname">jacoobes</h1>
            "<span><i>{{ quote }}</i></span>"
            <div> 
                <span > (links) </span>
                {% for link in links %}
                    <a href="{{ link.url }}">
                        <h1>{{ link.label }}</h1>
                    </a>
                {% endfor %}
            </div>
            <div class="settings"> 
                <span>(settings)</span>
                <label class="theme-toggle"></label>
                <input type="checkbox" id="dark-mode-toggle">
                <span>Dark</span>
            </div>
            <div class="contact">
                <span>(contact)</span>
                <form action="https://send.pageclip.co/bSCNueNophgfnRmIhCPRi9QDRRxCw8BE" class="pageclip-form" method="post">
                  <input type="text" required name="subject" class="pure-input" placeholder="subject" />
                  <input type="email" required name="email" placeholder="your contact" />
                  <button type="submit" class="pure-button pageclip-form__submit">
                    Send
                  </button>
                </form>
            </div>
        </div>
    </div>
    <div class="secondhalf pure-u-md-1-2 pure-u-1"> 
          <div class="title">
              <span>
                (Projects)
              </span>
          </div>
          {% for project in projects %}
            <div class="project-item" data-link="{{ project.link or 'NONE' }}">
                <strong> {{ project.name }} </strong> {{ linksvg() }}
                <h1>{{ project.des }} </h1>
            </div>
          {% endfor %}
    </div>
    <script src="https://s.pageclip.co/v1/pageclip.js" charset="utf-8"></script>
    <script src="/index.js"></script> <!-- Include your JavaScript -->
</body>
</html>
